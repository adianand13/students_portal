<%include ../partials/assets2/header%>
<%include ../partials/assets2/sidebar%>

<!--start of main content-->
<div class="main-content">
    <%include ../partials/assets2/navbar.ejs%>
    <%include ../partials/assets2/stats_card.ejs%>
    <!--start of page content-->
    <div class="container-fluid mt--7">
        <div class="row">
            <!--beginning of the card-->
            <div class="col">
                <!--card shadow-->
                <div class="card bg-secondary shadow">
                    <!--card header-->
                    <div class="card-header bg-white border-0">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h3 class="mb-0">Add new Faculty</h3>
                            </div>
                            <div class="col-4 text-right">
                                <a href="/downloads/newUsersCSV" class="btn btn-sm btn-outline-success">Download CSV template</a>
                                <a href="/admin" class="btn btn-sm btn-outline-warning">Cancel</a>
                            </div>
                        </div>
                    </div>
                    <!--Card Body-->
                    <div class="card-body">
                        <!--start of form-->
                        <form role="form" action="/newFaculty" method="POST">
                            <h4 class="alert-heading text-center text-monospace text-sm mb--2"><i class="text-danger">Note:</i> Download the CSV template, Fill the data with help of MS-Excel. open it in text editor and then <i>copy-paste</i> the entire content as shown below</h4>
                            <h4 class="alert-heading text-center text-monospace text-sm mb--2"><i class="text-danger">DOB:</i>YYYY-MM-DD</h4>
                            <hr class="my-4" />
                            <h6 class="heading-small text-muted mb-4">Enter new unique EmpId</h6>
                            <div class="pl-lg-4">
                                <div class="form-group">
                                    <label for="creation">Add single or multiple</label>
                                    <textarea id="creation" name="data" rows="10" class="form-control form-control-alternative" placeholder="EmpId,Full Name,DOB(DD/MM/YYYY)
1317007,Aditya Anand,1998-10-13
13170060,Manish,1999-107-31
                                    "></textarea>
                                </div>
                            </div>
                            <hr class="my-4" />
                            <div class="text-center">
                                <button class="btn btn-lg btn-success my-3 text-center">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <%include ../partials/assets2/footer.ejs%>
    </div>
</div>
<!--end of main content-->
<%include ../partials/assets2/ender.ejs%>