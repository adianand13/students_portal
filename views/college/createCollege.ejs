<%include ../partials/assets2/header%>
<%include ../partials/assets2/sidebar%>

<!--start of main content-->
<div class="main-content">
    <%include ../partials/assets2/navbar.ejs%>
    <%include ../partials/assets2/stats_card.ejs%>
    <!--start of page content-->
    <div class="container-fluid mt--7">
        <div class="row">
            <!--beginning of the card-->
            <div class="col">
                <!--card shadow-->
                <div class="card bg-secondary shadow">
                    <!--card header-->
                    <div class="card-header bg-white border-0">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h3 class="mb-0">Create New College</h3>
                            </div>
                            <div class="col-4 text-right">
                                <a href="/admin" class="btn btn-sm btn-outline-warning">Cancel</a>
                            </div>
                        </div>
                    </div>
                    <!--Card Body-->
                    <div class="card-body">
                        <!--start of form-->
                        <form role="form" action="/createCollege" method="POST">
                            <h6 class="heading-small text-muted mb-4">College information</h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-username">Name</label>
                                            <input required type="text" id="input-username" name="college[name]" class="form-control form-control-alternative" placeholder="">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-email">College Code</label>
                                            <input required type="text" name="college[code]" id="input-email" class="form-control form-control-alternative" placeholder="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4" />
                            <!--end of form for now, might extent in future-->
                            <!-- addition information space for future -->
                            <h6 class="heading-small text-muted mb-4">Contact information</h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-address">Address</label>
                                            <input id="input-address" name="college[address][add]"  class="form-control form-control-alternative" placeholder="Home Address" value="M.M University Mullana" type="text">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-city">City</label>
                                            <input type="text" name="college[address][city]" id="input-city" class="form-control form-control-alternative" placeholder="City" value="Ambala">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-city">State</label>
                                            <input type="text" name="college[address][state]" id="input-city" class="form-control form-control-alternative" placeholder="City" value="Haryana">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-country">Country</label>
                                            <input type="text" name="college[address][country]" id="input-country" class="form-control form-control-alternative" placeholder="Country" value="India">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-country">Area code</label>
                                            <input type="number" name="college[address][areaCode]" id="input-postal-code" class="form-control form-control-alternative" placeholder="Postal code">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4" />
                            <!-- Description -->
                            <h6 class="heading-small text-muted mb-4">About </h6>
                            <div class="pl-lg-4">
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea name="college[description]" rows="4" class="form-control form-control-alternative" placeholder="A few words about college ..."></textarea>
                                </div>
                            </div>
                            <div class="text-center">
                                <button class="btn btn-lg btn-success my-3 text-center">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <%include ../partials/assets2/footer.ejs%>
    </div>
</div>
<!--end of main content-->
<%include ../partials/assets2/ender.ejs%>